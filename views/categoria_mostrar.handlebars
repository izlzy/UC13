<h1>Ver categorias do Site</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Categoria:</th>
                <th>Descricao:</th>
                <th>Acoes:</th>
            </tr>
        </thead>
            {{#each categorias}}
                <tr>
                    <td value="{{this.cod_id}}">{{this.nome}}</td>
                    <td value="{{this.descricao}}">{{this.descricao}}</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                            <button type="button" class="btn btn-danger"><i class="bi bi-trash"></i></button>
                            <button type="button" class="btn btn-warning"><i class="bi bi-pencil"></i></td></button>
                        </div>
                </tr>
            {{/each}}
    </table>
